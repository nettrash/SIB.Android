<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="ru.nettrash.sibliteandroid.InitializeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:scaleType="centerCrop"
        android:src="@drawable/background0020"/>

    <FrameLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true">

        <TextView
            android:layout_gravity="top"
            android:layout_marginTop="24pt"
            android:text="@string/createWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16pt"/>

        <EditText
            android:id="@+id/first_key_value_editor"
            android:layout_width="match_parent"
            android:layout_height="21pt"
            android:layout_gravity="top"
            android:background="@color/colorTextEditorBackground"
            android:layout_marginTop="48pt"
            android:inputType="none"
            android:lines="1"
            android:textAlignment="center"
            android:alpha="0.5"
            android:textColorHighlight="@color/colorWhite"
            />

        <Button
            android:id="@+id/create_wallet"
            android:layout_width="match_parent"
            android:layout_height="16pt"
            android:layout_gravity="top"
            android:layout_marginTop="74pt"
            android:background="@color/colorBlack"
            android:alpha="0.3"
            android:text="Continue"
            android:textSize="12pt"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10px"
            android:layout_marginRight="10px"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"/>
    </FrameLayout>
</FrameLayout>
