<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="ru.nettrash.sibliteandroid.VerifyPINActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:scaleType="centerCrop"
        android:src="@drawable/background0020"/>

    <FrameLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="21pt"
        android:gravity="center"
        android:keepScreenOn="true">

        <TextView
            android:layout_gravity="top"
            android:layout_marginTop="24pt"
            android:text="@string/verifyPIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16pt"/>

        <EditText
            android:id="@+id/pin_value_editor"
            android:layout_width="match_parent"
            android:layout_height="21pt"
            android:layout_gravity="top"
            android:background="@color/colorTextEditorBackground"
            android:layout_marginTop="48pt"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="4"
            android:textAlignment="center"
            android:alpha="0.5"
            android:textColorHighlight="@color/colorWhite"
            />

        <Button
            android:id="@+id/create_wallet"
            android:layout_width="match_parent"
            android:layout_height="18pt"
            android:layout_gravity="top"
            android:layout_marginTop="84pt"
            android:background="@color/colorBlack"
            android:alpha="0.3"
            android:text="@string/verifyPINContinue"
            android:textSize="12pt"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:onClick="verifyPIN_Click"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10px"
            android:layout_marginRight="10px"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"/>
    </FrameLayout>
</FrameLayout>
